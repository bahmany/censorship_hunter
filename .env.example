# ============================================================
# Hunter Configuration Example
# Copy this file to .env and fill in your values
# WARNING: Never commit .env or hunter_secrets.env to git!
# ============================================================

# ========================
# Telegram API Credentials
# ========================
# Get from https://my.telegram.org/apps
HUNTER_API_ID="YOUR_API_ID"
HUNTER_API_HASH="YOUR_API_HASH"
HUNTER_PHONE="+98XXXXXXXXXX"

# Telegram Bot Token (from @BotFather)
TOKEN="YOUR_BOT_TOKEN"

# Telegram Chat/Group ID for reporting
CHAT_ID="-100XXXXXXXXXX"

# Telegram Session
HUNTER_SESSION="hunter_session"
HUNTER_RESET_TELEGRAM_SESSION="false"

# ========================
# SSH Tunnel Servers
# ========================
# JSON format (preferred - supports multiple servers)
SSH_SERVERS_JSON=[{"host":"YOUR_SSH_HOST","port":22,"username":"YOUR_USER","password":"YOUR_PASS"}]

# Individual format (alternative)
SSH1_HOST=YOUR_SSH_HOST
SSH1_PORT=22
SSH1_USER=YOUR_USER
SSH1_PASS=YOUR_PASS

# ========================
# Scanning & Validation
# ========================
HUNTER_SCAN_LIMIT=50
HUNTER_MAX_CONFIGS=800
HUNTER_WORKERS=10
HUNTER_TEST_TIMEOUT=10
HUNTER_SLEEP=300
HUNTER_TEST_MODE=false

# ========================
# Proxy & Load Balancer
# ========================
HUNTER_MULTIPROXY_PORT=10808
HUNTER_MULTIPROXY_BACKENDS=5
HUNTER_MULTIPROXY_HEALTH_INTERVAL=60
HUNTER_GEMINI_BALANCER=false
HUNTER_GEMINI_PORT=10809

# ========================
# Feature Flags
# ========================
ADEE_ENABLED=true
IRAN_FRAGMENT_ENABLED=false
GATEWAY_ENABLED=false
HUNTER_WEB_SERVER=true
HUNTER_WEB_PORT=8080

# ========================
# 2026 DPI Evasion Suite
# ========================
HUNTER_DPI_EVASION=true
HUNTER_DPI_ADAPTIVE=true

# TLS Fingerprint Evasion (JA3/JA4 spoofing)
HUNTER_TLS_FP_EVASION=true
HUNTER_TLS_FP_H2=true
HUNTER_TLS_FP_ROTATION=120

# TLS ClientHello Fragmentation
HUNTER_TLS_FRAGMENT=true
HUNTER_TLS_FRAG_STRATEGY=three_part
HUNTER_TLS_FRAG_MIN_DELAY=10
HUNTER_TLS_FRAG_MAX_DELAY=50

# VLESS-Reality-Vision
HUNTER_REALITY_DEST=swdist.apple.com:443
HUNTER_REALITY_SNI=swdist.apple.com,www.apple.com

# MTU Optimizer (5G PMTUD mitigation)
HUNTER_MTU_OPT=true
HUNTER_MTU_4G=1350
HUNTER_MTU_5G=1280
HUNTER_MTU_FIBER=1500

# Active Probe Defense
HUNTER_PROBE_DEFENSE=true
HUNTER_PROBE_FALLBACK=www.apple.com

# Entropy Normalization
HUNTER_ENTROPY_NORM=true

# UDP Protocols (Hysteria2/TUIC)
HUNTER_HY2_ENABLED=true
HUNTER_TUIC_ENABLED=true
HUNTER_UDP_HOP=true
HUNTER_UDP_PORT_RANGE=20000-40000
HUNTER_UDP_HOP_INTERVAL=30

# ========================
# Cache Configuration
# ========================
CACHE_DIR=~/.hunter/cache
CACHE_ALL_CONFIGS=true
CACHE_ACTIVE_CONFIGS=true
CACHE_VALIDATED_CONFIGS=true
